[Unit]
Description=ajk_shutdown launcher
After=roscore.service
Requires=roscore.service

[Service]
User=rosusb
ExecStartPre=/bin/bash -l -c 'rostopic list'
ExecStart=/usr/bin/screen -S ajk_shutdown -ADm bash -l -c 'roslaunch mavlink_ajk ajk_shutdown.launch'
Type=simple
Restart=always
RestartSec=1s

[Install]
WantedBy=multi-user.target
